{
    "name": "web-interaction-gif-generator",
    "version": "1.0.0",
    "description": "Automated GIF generation for web application documentation",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "test": "jest",
        "docker:build": "docker compose build",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f",
        "docker:ps": "docker compose ps",
        "docker:restart": "docker compose restart",
        "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
        "run-flows": "node scripts/run-flows.js",
        "cleanup": "chmod +x scripts/cleanup.sh && ./scripts/cleanup.sh"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "playwright": "^1.40.0",
        "fluent-ffmpeg": "^2.1.2",
        "joi": "^17.11.0",
        "dotenv": "^16.3.1",
        "uuid": "^9.0.1",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "jest": "^29.7.0",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "documentation",
        "gif",
        "automation",
        "playwright",
        "screen-recording",
        "docker"
    ],
    "author": "Your Name",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/web-interaction-gif-generator.git"
    }
}