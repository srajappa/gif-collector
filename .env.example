# Environment Configuration for Web Interaction GIF Generator

# Application Settings
NODE_ENV=development
PORT=3000

# Browser Settings
HEADLESS=true
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Recording Settings
OUTPUT_DIR=/app/output
STEP_DELAY=1500

# Test App Settings
TEST_APP_URL=http://test-app:3001

# Performance Settings
MAX_CONCURRENT_RECORDINGS=3
REQUEST_TIMEOUT=300000

# File Management
MAX_FILE_SIZE=104857600
AUTO_CLEANUP=false
MAX_FILE_AGE=604800000

# Logging
LOG_LEVEL=info

# GIF Generation Settings
DEFAULT_GIF_FPS=10
DEFAULT_GIF_SCALE=800:-1
DEFAULT_GIF_QUALITY=medium

# Security (for production)
# JWT_SECRET=your-secret-key
# CORS_ORIGIN=https://yourdomain.com

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/gifgenerator